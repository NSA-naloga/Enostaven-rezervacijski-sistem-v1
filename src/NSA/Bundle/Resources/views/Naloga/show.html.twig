        <ul class="record_actions">
    <li>
        <a href="{{ path('naloga') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('naloga_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
