{% block body -%}
    <h1>Naloga</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Naslov</th>
                <td>{{ entity.naslov }}</td>
            </tr>
            <tr>
                <th>Opis</th>
                <td>{{ entity.opis }}</td>
            </tr>
            <tr>
                <th>Kljucnebesede</th>
                <td>{{ entity.kljucneBesede }}</td>
            </tr>
            <tr>
